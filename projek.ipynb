import torch
import torch.nn as nn
import torch.optim as optim
from torchvision import datasets, models, transforms
from torch.utils.data import DataLoader, random_split, Dataset
from torch.cuda.amp import GradScaler, autocast
import matplotlib.pyplot as plt
import numpy as np
from sklearn.metrics import classification_report, confusion_matrix, ConfusionMatrixDisplay, roc_curve, auc
from sklearn.preprocessing import label_binarize
from itertools import cycle
from tqdm import tqdm
import copy

# ==========================================
# 1. KONFIGURASI GLOBAL (GANTI PATH DI SINI)
# ==========================================
DATA_DIR = r'D:\Kuliah\joki\joki radit\irgi\dataset\pest\train' 
NUM_WORKERS = 0  # Wajib 0 untuk Windows agar tidak error/hang
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")

print(f"Device yang digunakan: {device}")

# ==========================================
# 2. DATASET WRAPPER & SPLIT
# ==========================================
class ApplyTransform(Dataset):
    def __init__(self, subset, transform=None):
        self.subset = subset
        self.transform = transform
    def __getitem__(self, index):
        x, y = self.subset[index]
        if self.transform: x = self.transform(x)
        return x, y
    def __len__(self): return len(self.subset)

# Load Raw Data
print("Memuat Dataset...")
full_dataset = datasets.ImageFolder(root=DATA_DIR)
class_names = full_dataset.classes
n_classes = len(class_names)
print(f"Kelas: {class_names}")

# Split Data (70% Train, 15% Val, 15% Test)
train_size = int(0.7 * len(full_dataset))
val_size = int(0.15 * len(full_dataset))
test_size = len(full_dataset) - train_size - val_size
train_subset, val_subset, test_subset = random_split(
    full_dataset, [train_size, val_size, test_size],
    generator=torch.Generator().manual_seed(42)
)

# ==========================================
# 3. FUNGSI VISUALISASI (CM & ROC)
# ==========================================
def evaluasi_dan_plot(model, dataloader, title_prefix):
    model.eval()
    y_true = []
    y_pred = []
    y_score = []

    print(f"\n--- Memulai Evaluasi {title_prefix} ---")
    with torch.no_grad():
        for inputs, labels in tqdm(dataloader, desc="Testing"):
            inputs = inputs.to(device)
            outputs = model(inputs)
            probs = torch.nn.functional.softmax(outputs, dim=1)
            _, preds = torch.max(outputs, 1)

            y_true.extend(labels.cpu().numpy())
            y_pred.extend(preds.cpu().numpy())
            y_score.extend(probs.cpu().numpy())

    # 1. Classification Report
    print(f"\nLaporan Klasifikasi {title_prefix}:")
    print(classification_report(y_true, y_pred, target_names=class_names))

    # 2. Confusion Matrix
    cm = confusion_matrix(y_true, y_pred)
    disp = ConfusionMatrixDisplay(confusion_matrix=cm, display_labels=class_names)
    fig, ax = plt.subplots(figsize=(10, 8))
    disp.plot(cmap='Blues', ax=ax, xticks_rotation=45)
    plt.title(f'Confusion Matrix - {title_prefix}')
    plt.tight_layout()
    plt.show()

    # 3. ROC Curve
    y_test_bin = label_binarize(y_true, classes=range(n_classes))
    y_score = np.array(y_score)

    fpr, tpr, roc_auc = {}, {}, {}
    for i in range(n_classes):
        fpr[i], tpr[i], _ = roc_curve(y_test_bin[:, i], y_score[:, i])
        roc_auc[i] = auc(fpr[i], tpr[i])

    plt.figure(figsize=(10, 8))
    colors = cycle(['blue', 'red', 'green', 'orange', 'purple', 'brown'])
    for i, color in zip(range(n_classes), colors):
        plt.plot(fpr[i], tpr[i], color=color, lw=2,
                 label='ROC {0} (area = {1:0.2f})'.format(class_names[i], roc_auc[i]))

    plt.plot([0, 1], [0, 1], 'k--', lw=2)
    plt.xlim([0.0, 1.0])
    plt.ylim([0.0, 1.05])
    plt.xlabel('False Positive Rate')
    plt.ylabel('True Positive Rate')
    plt.title(f'ROC Curve - {title_prefix}')
    plt.legend(loc="lower right")
    plt.show()

# ==========================================
# 4. SKEMA 1: THE MINIMALIST (MobileNetV3)
# ==========================================
def jalankan_skema_1():
    print("\n" + "="*40)
    print("START SKEMA 1: MobileNetV3 (Minimalist)")
    print("="*40)

    IMG_SIZE = 160
    BATCH_SIZE = 64
    EPOCHS = 5 

    # Transform
    train_trans = transforms.Compose([
        transforms.Resize((IMG_SIZE, IMG_SIZE)),
        transforms.RandomHorizontalFlip(),
        transforms.ToTensor(),
        transforms.Normalize([0.485, 0.456, 0.406], [0.229, 0.224, 0.225])
    ])
    val_test_trans = transforms.Compose([
        transforms.Resize((IMG_SIZE, IMG_SIZE)),
        transforms.ToTensor(),
        transforms.Normalize([0.485, 0.456, 0.406], [0.229, 0.224, 0.225])
    ])

    # Loader
    train_loader = DataLoader(ApplyTransform(train_subset, train_trans), batch_size=BATCH_SIZE, shuffle=True, num_workers=NUM_WORKERS)
    test_loader = DataLoader(ApplyTransform(test_subset, val_test_trans), batch_size=BATCH_SIZE, shuffle=False, num_workers=NUM_WORKERS)

    # Model Setup
    model = models.mobilenet_v3_small(weights=models.MobileNet_V3_Small_Weights.DEFAULT)
    for param in model.features.parameters():
        param.requires_grad = False

    model.classifier[3] = nn.Linear(model.classifier[3].in_features, n_classes)
    model = model.to(device)

    optimizer = optim.Adam(model.parameters(), lr=0.001)
    criterion = nn.CrossEntropyLoss()

    # Training Loop Skema 1
    for epoch in range(EPOCHS):
        model.train()
        loop = tqdm(train_loader, desc=f"Training S1 Epoch {epoch+1}/{EPOCHS}")
        for inputs, labels in loop:
            inputs, labels = inputs.to(device), labels.to(device)
            optimizer.zero_grad()
            outputs = model(inputs)
            loss = criterion(outputs, labels)
            loss.backward()
            optimizer.step()
            loop.set_postfix(loss=loss.item())

    # Simpan & Evaluasi
    torch.save(model.state_dict(), 'model_hama_minimalist.pth')
    print("Model Skema 1 Disimpan!")
    evaluasi_dan_plot(model, test_loader, "Skema 1 (MobileNetV3)")

# ==========================================
# 5. SKEMA 2: SPEED RACER (ShuffleNet + AMP)
# ==========================================
def jalankan_skema_2():
    print("\n" + "="*40)
    print("START SKEMA 2: ShuffleNet V2 (Speed Racer)")
    print("="*40)

    IMG_SIZE = 224
    BATCH_SIZE = 32
    EPOCHS = 8 # Sedikit lebih banyak

    # Transform
    train_trans = transforms.Compose([
        transforms.Resize((IMG_SIZE, IMG_SIZE)),
        transforms.RandomRotation(15),
        transforms.ToTensor(),
        transforms.Normalize([0.485, 0.456, 0.406], [0.229, 0.224, 0.225])
    ])
    val_test_trans = transforms.Compose([
        transforms.Resize((IMG_SIZE, IMG_SIZE)),
        transforms.ToTensor(),
        transforms.Normalize([0.485, 0.456, 0.406], [0.229, 0.224, 0.225])
    ])

    # Loader (Pin Memory True untuk GPU speed)
    train_loader = DataLoader(ApplyTransform(train_subset, train_trans), batch_size=BATCH_SIZE, shuffle=True, num_workers=NUM_WORKERS, pin_memory=True)
    test_loader = DataLoader(ApplyTransform(test_subset, val_test_trans), batch_size=BATCH_SIZE, shuffle=False, num_workers=NUM_WORKERS, pin_memory=True)

    # Model Setup
    model = models.shufflenet_v2_x0_5(weights=models.ShuffleNet_V2_X0_5_Weights.DEFAULT)
    model.fc = nn.Linear(model.fc.in_features, n_classes)
    model = model.to(device)

    optimizer = optim.Adam(model.parameters(), lr=0.001)
    criterion = nn.CrossEntropyLoss()
    scheduler = optim.lr_scheduler.OneCycleLR(optimizer, max_lr=0.01, steps_per_epoch=len(train_loader), epochs=EPOCHS)

    # Mixed Precision Scaler
    scaler = GradScaler()

    # Training Loop Skema 2
    for epoch in range(EPOCHS):
        model.train()
        loop = tqdm(train_loader, desc=f"Training S2 Epoch {epoch+1}/{EPOCHS}")
        for inputs, labels in loop:
            inputs, labels = inputs.to(device), labels.to(device)
            optimizer.zero_grad()

            # AMP Context
            with autocast():
                outputs = model(inputs)
                loss = criterion(outputs, labels)

            scaler.scale(loss).backward()
            scaler.step(optimizer)
            scaler.update()
            scheduler.step()

            loop.set_postfix(loss=loss.item())

    # Simpan & Evaluasi
    torch.save(model.state_dict(), 'model_hama_speedracer.pth')
    print("Model Skema 2 Disimpan!")
    evaluasi_dan_plot(model, test_loader, "Skema 2 (ShuffleNet)")

